<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vn.aptech.baikiemtra.controller.Bai3Controller">
   <children>
      <AnchorPane fx:id="root" prefHeight="400.0" prefWidth="600.0" styleClass="bg" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
      <MenuBar prefHeight="25.0" prefWidth="600.0" styleClass="bar-menu" stylesheets="@css/style.css" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="menuClearAll" mnemonicParsing="false" onAction="#clearAll" text="Clear All" />
                  <MenuItem fx:id="menuBackToMainMenu" mnemonicParsing="false" onAction="#switchToMenu" text="Back to Main Menu" />
                  <MenuItem fx:id="menuExit" mnemonicParsing="false" onAction="#exit" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Tool">
            <items>
              <MenuItem fx:id="menuOption" mnemonicParsing="false" onAction="#openOption" text="Option" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
